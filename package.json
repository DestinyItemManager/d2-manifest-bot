{
  "name": "d2-manifest-bot",
  "type": "module",
  "repository": "https://github.com/DestinyItemManager/d2-manifest-bot.git",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
